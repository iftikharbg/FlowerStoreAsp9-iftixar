@model HomeViewModel
<main>

    <!-- SLIDER START -->

    <section id="slider">
        <div class="owl-carousel slider">
            @foreach (var item in Model.sliderImages) 
            {
                <div> <img  src="~/img/@item.Image" alt=""> </div>
            }

           
        </div>
        <div class="container context pl-lg-5 ml-lg-3">
            <div class="row">
                <div class="col-lg-5">
                    <div class="text">
                        @Html.Raw(Model.slider.Title)
                       
                        <h1>you mean it</h1>
                        <p class="text-black-50 d-none d-sm-block">
                          @Model.slider.Description
                        </p>
                    </div>
                    <div class="img">
                        <img src="img/@Model.slider.Signature" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SLIDER END -->
    <!-- PRODUCTS START -->

    <section id="products">
        <div class="container">
            <div class="row pt-5">
                <div class="col-12 d-flex justify-content-between">
                    <ul class="category-mobile d-md-none list-unstyled">
                        <li>
                            <a href="" class="categories mr-2">Categories</a>
                            <i class="fas fa-caret-down"></i>
                            <ul class="category list-unstyled" style="display: none;">
                                <li><a href="" data-id="all">All</a></li>
                                <li><a href="" data-id="popular">Popular</a></li>
                                <li><a href="" data-id="winter">Winter</a></li>
                                <li><a href="" data-id="various">Various</a></li>
                                <li><a href="" data-id="exotic">Exotic</a></li>
                                <li><a href="" data-id="green">Greens</a></li>
                                <li><a href="" data-id="cactuse">Cactuses</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="category d-none d-md-flex list-unstyled">
                        <li><a href="" data-id="all">All</a></li>

                        @foreach (var category in Model.category)
                        {
                            <li><a href="" data-id="@category.Name.ToLower()">@category.Name</a></li>

                        }


                    </ul>
                    <ul class="list-unstyled">
                        <li>
                            <a href="" class="mr-2">Filter</a>
                            <i class="fas fa-caret-down"></i>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row" id="products-count">
              @*<partial name="_ProductPartial" model="@Model.product"/>*@
                @await Component.InvokeAsync("Product") 

            </div>
            <button id="load" data-count="@ViewBag.SkipCount" class="btn btn-primary">Load more</button>
        </div>
    </section>

    <!-- PRODUCTS END -->
    <!-- ABOUT START -->

    <section id="about">
        <div class="container py-5">
            <div class="row py-5">
                <div class="col-lg-6">
                    <div class="img">
                        @Html.Raw(Model.valentine.PhotoUrl)
                        <div class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                            <i class="fas fa-play fa-lg"></i>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-text mt-5 mt-lg-0 px-lg-5">
                        @Html.Raw(Model.valentine.Title)
                        @Html.Raw(Model.valentine.Desc)
                        <ul class="list-unstyled">
                          @foreach (var item in Model.listItem)
                          {
                              @Html.Raw(item.Text)
                          }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ABOUT END -->
    <!-- EXPERTS START -->

    <section id="experts">
        <div class="container">
            <div class="row py-5">
                <div class="offset-lg-3 col-lg-6">
                    <div class="section-title">
                        <h1>@Model.title.Name</h1>
                        <p class="text-black-50">
                           @Model.title.Desc
                        </p>
                    </div>
                </div>
            </div>
            <div class="row pb-5">
                @foreach (var item in Model.experts)

                {

                    <div class="col-md-6 col-lg-3">
                        <div class="item text-center">
                            <div class="img">
                                <img src="img/@item.Image" class="img-fluid rounded-circle" alt="">
                            </div>
                            <div class="text mt-3">
                                <h6>@item.Name</h6>
                                <p class="text-black-50">@item.Profession</p>
                            </div>
                        </div>
                    </div>
                }
              

                <div class="col-lg-3"></div>
                <div class="col-lg-3"></div>
                <div class="col-lg-3"></div>
            </div>
        </div>
    </section>

    <!-- EXPERTS END -->
    <!-- SUBSCRIBE START -->

  
    <section id="subscribe" style="background: url(@Model.subscribeTable.Image);">
        <div class="container py-5">
            <div class="row py-5">
                <div class="col-12">
                    <div class="content text-center py-5">
                        <h3>@Model.subscribeTable.Name</h3>
                        <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                            <input type="email" placeholder="Email Address" class="form-control-lg rounded-0">
                            <button class="btn btn-danger btn-lg rounded-0 px-5 mt-3 mt-sm-0">Subscribe</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SUBSCRIBE END -->
    <!-- BLOG START -->

    <section id="blog">
        <div class="container">
            <div class="row py-5">
                <div class="offset-lg-3 col-lg-6">
                    <div class="section-title">
                        <h1>@Model.blog.Title</h1>
                        <p class="text-black-50">
                            @Model.blog.Desc
                        </p>
                    </div>
                </div>
            </div>
            <div class="row pb-5">
                @foreach (var item in Model.BlogItems)
                {

                    <div class="col-md-6 col-lg-4">
                        <div class="item">
                            <div class="img position-relative">
                                <img src="@item.Image" class="img-fluid" alt="">
                                <div class="date rounded bg-light position-absolute py-1 px-2">
                                    <span>@item.Date.ToLongDateString()</span>
                                </div>
                            </div>
                            <div class="text mt-3 text-center px-5">
                                <h5>@item.Name</h5>
                                <p class="text-black-50">
                                   @item.Desc
                                </p>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </section>

    <!-- BLOG END -->
    <!-- SAY START -->

    <section id="say">
        <div class="container">
            <div class="row py-5 justify-content-center">
                <div class="col-md-8 col-xl-6">
                    <div class="owl-carousel say">
                        <div>
                            <div class="item text-center">
                                <div class="img d-flex justify-content-center">
                                    <img src="@Model.worker.Image" alt="">
                                </div>
                                <div class="text text-muted pt-3 pb-5">
                                    <i>
                                       @Model.worker.Desc
                                    </i>
                                </div>
                                <div class="author">
                                    <h6>@Model.worker.Name</h6>
                                    <p class="text-black-50">@Model.worker.Profession</p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="item text-center">
                                <div class="img d-flex justify-content-center">
                                    <img src="img/testimonial-img-2.png" alt="">
                                </div>
                                <div class="text text-muted pt-3 pb-5">
                                    <i>
                                        Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo
                                        ligula eget.
                                    </i>
                                </div>
                                <div class="author">
                                    <h6>Jasmine White</h6>
                                    <p class="text-black-50">Florist</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SAY END -->
    <!-- INSTAGRAM START -->

    <section id="instagram">
        <div class="owl-carousel instagram">
            @foreach (var item in Model.Images)
            {
                <div><img src="@item.ImageUrl" class="img-fluid" alt=""></div>
            }


        </div>
        <div class="hastag bg-light text-muted py-2 px-3">
           @Model.Hashtag.Name
        </div>
    </section>

    <!-- INSTAGRAM END -->

</main>