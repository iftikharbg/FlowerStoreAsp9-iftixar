@model Category

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Basic form layout
                    </p>
                    <form class="forms-sample"asp-controller="Category" asp-action="Update" method="post">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Username</label>
                            <input type="text" asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <textarea id="editor" asp-for="Desc">@Model.Desc</textarea>
                        </div>

                        <div class="form-check form-check-flat form-check-primary">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input">
                                Remember me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

        @section scripts{
            <partial name="_ValidatePartial">
                <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
                <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
               console.log("error")
            })
                </script>

        }
