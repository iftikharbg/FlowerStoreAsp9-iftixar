@model Footer
@{
    ViewData["Title"] = "Index";
}



<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> Create New Category</h4>

                    <form class="forms-sample" method="post" asp-controller="Footer" asp-action="Index" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="File">Logo</label>
                            <input class="form-control" asp-for="File" placeholder="Logo">
                            <span class="text-danger" asp-validation-for="File"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FacebookUrl">FacebookUrl</label>
                            <input class="form-control" asp-for="FacebookUrl" placeholder="FacebookUrl">
                            <span class="text-danger" asp-validation-for="FacebookUrl"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LinkedinUrl">LinkedinUrl</label>
                            <input class="form-control" asp-for="LinkedinUrl" placeholder="LinkedinUrl">
                            <span class="text-danger" asp-validation-for="LinkedinUrl"></span>
                        </div>



                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
